<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPass.ForgotPasswordActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backArrowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="back arrow"
            android:focusable="true"

            android:minHeight="48dp"
            android:src="@drawable/back_arrow_ic"
            app:tint="@color/body_text"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Forgot\nPassword?"
            android:textColor="?android:textColorPrimary"
            android:textSize="40sp" />

        <FrameLayout
            android:id="@+id/forgotPassFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/container_frame"
        app:layout_constraintStart_toStartOf="parent">

            <Button
            android:id="@+id/submitButtonForgotPassScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_button_design"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:text="Submit"
            android:textColor="@color/white"
            android:elevation="20dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="40dp"
            tools:ignore="VisualLintButtonSize" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>