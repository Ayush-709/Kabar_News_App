<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kabar" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">?android:textColorPrimaryNoDisable</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimary" tools:targetApi="n_mr1">@color/white</item>
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/black</item>

        <item name="android:textColorPrimary">@color/body_text</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.Kabar" parent="Base.Theme.Kabar"/>
    <style name="BottomMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar"/>
</resources>