<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:fitsSystemWindows="true"
        android:icon="@mipmap/kabar_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kabar_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kabar"
        tools:targetApi="31">
        <activity
            android:name=".ForgotPass.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".SignupScreenActivity"
            android:exported="false" />
        <activity
            android:name=".LoginScreenActivity"
            android:exported="false" />
        <activity
            android:name=".EntryInfoActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>