<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText"
    tools:context=".HomeScreenFiles.HomeScreenNewsItemActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/homeScreenNewsDetailBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="backButton"
                android:src="@drawable/back_arrow_ic" />
        </LinearLayout>

        <TextView
            android:id="@+id/newsDetailTVName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginVertical="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/header"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <ImageView
            android:id="@+id/newsDetailTVImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_placeholder"
            android:minHeight="230dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="newsImage"
            android:scaleType="fitXY"
            android:layout_marginVertical="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newsDetailTVName"
            tools:ignore="ImageContrastCheck" />
        <TextView
            android:id="@+id/newsDetailTVAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Author"
            app:layout_constraintTop_toBottomOf="@id/newsDetailTVImage"
            app:layout_constraintStart_toStartOf="@id/newsDetailTVImage"
            android:layout_marginVertical="10dp"
            android:textColor="@color/body_text"/>
        <TextView
            android:id="@+id/newsDetailTVTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="24sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/newsDetailTVAuthor"
            app:layout_constraintStart_toStartOf="@id/newsDetailTVAuthor"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:id="@+id/newsDetailTVContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contnetnetewn eion asnjdsan jdansd"
            android:textSize="16sp"
            android:textColor="@color/body_text"
            app:layout_constraintStart_toStartOf="@id/newsDetailTVTitle"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toBottomOf="@id/newsDetailTVTitle"
            android:lineSpacingExtra="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>