<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="5dp"
    tools:ignore="HardcodedText">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/newsItemCardImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/placeholder" />
        <TextView
            android:id="@+id/newsItemCardAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Author"
            android:textColor="@color/placeholder"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/newsItemCardImage"
            app:layout_constraintTop_toTopOf="@id/newsItemCardImage"/>
        <TextView
            android:id="@+id/newsItemCardDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="jew j j wjdn qwkj  qwnjk ekj fewf ewkfnjwe fnkewjo ewkn ejo nknfew jfnewkkj jwe lnfew jew w wnen jwenf jewj f"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/newsItemCardAuthor"
            app:layout_constraintTop_toBottomOf="@id/newsItemCardAuthor"
            />
        <TextView
            android:id="@+id/newsItemCardPublishedDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="13-23-2023 23:12"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/newsItemCardDescription"
            app:layout_constraintTop_toBottomOf="@id/newsItemCardDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>